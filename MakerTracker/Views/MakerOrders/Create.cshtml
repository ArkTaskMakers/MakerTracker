@model CreateEditMakerOrder

@{
    ViewData["Title"] = "Create Maker Order";
}


<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Add to my queue.</h1>
<p class="mb-4">You can specify work you are doing this week or have already done.</p>

<div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Add to my queue</h6>
    </div>

    <!-- Card Body -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProductId" class="control-label"></label>
                        <select asp-for="ProductId" class="form-control"
                                asp-items="@(new SelectList(ViewBag.AvailableProducts,"Id","Name"))">
                            <option>Please select one</option>
                        </select>
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExpectedFinished" class="control-label"></label>
                        <input asp-for="ExpectedFinished" class="form-control" />
                        <span asp-validation-for="ExpectedFinished" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PromisedCount" class="control-label"></label>
                        <input asp-for="PromisedCount" class="form-control" />
                        <span asp-validation-for="PromisedCount" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Finished" /> @Html.DisplayNameFor(model => model.Finished)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to My Orders</a>
        </div>
    </div>
</div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
