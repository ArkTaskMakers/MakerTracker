@model CreateEditMakerOrder

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MakerOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MakerOrderId" />
            <div class="form-group">
                <label asp-for="ExpectedFinished" class="control-label"></label>
                <input asp-for="ExpectedFinished" class="form-control" />
                <span asp-validation-for="ExpectedFinished" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PromisedCount" class="control-label"></label>
                <input asp-for="PromisedCount" class="form-control" />
                <span asp-validation-for="PromisedCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.AvailableProducts,"Id","Name"))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
